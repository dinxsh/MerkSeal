# MerkSeal Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Mantle Network Configuration
# ============================================

# Mantle RPC endpoint
# Sepolia Testnet: https://rpc.sepolia.mantle.xyz
# Mainnet: https://rpc.mantle.xyz
MANTLE_RPC_URL=https://rpc.sepolia.mantle.xyz

# Mantle Chain ID
# Sepolia Testnet: 5003
# Mainnet: 5000
MANTLE_CHAIN_ID=5003

# MerkleBatchRegistry contract address (deployed on Mantle)
# Get this after deploying the contract (see contracts/DEPLOYMENT.md)
MERKLE_BATCH_REGISTRY_ADDRESS=

# ============================================
# Deployment Configuration (for contracts/)
# ============================================

# Your private key for deploying contracts (DO NOT COMMIT!)
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Optional: Mantlescan API key for contract verification
MANTLESCAN_API_KEY=

# ============================================
# Server Configuration (optional)
# ============================================

# Server host and port
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
